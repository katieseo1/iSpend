<!DOCTYPE html>
<html lang='en'>
<head>
  <link href='/css/index.css' rel='stylesheet'>
  <title>iSpend</title>
</head>
<body>
  <div class='container'>
    <div class='col-sm-6 col-sm-offset-3'>
      <center>
        <a href='/'><img src='/img/logo.png' style='height:50px; margin-bottom:10px;'></a>
      </center>
      <div class='panel panel-default panel-background'>
        <div class='panel-body transparent panel-background'>
          <div class='signup-header'>
            <h3 class='form-title text-center'></h3>
            <h2>Signup</h2><%if (message.length > 0) { %>
            <div class='alert alert-danger'>
              <%= message %>
            </div><%} %>
            <form action='/signup' id='signup-form' method='post' name='signup-form'>
              <div class='form-group'>
                <label>Email/Username</label> <input class='form-control' name='email' required=''
                type='text'>
              </div>
              <div class='form-group'>
                <label>First Name</label> <input class='form-control' name='firstname' required=''
                type='text'>
              </div>
              <div class='form-group'>
                <label>Last Name</label> <input class='form-control' name='lastname' required=''
                type='text'>
              </div>
              <div class='form-group'>
                <label>Password</label> <input class='form-control' name='password' required=''
                type='password'>
              </div>
              <div class='form-group'>
                <label>Confirm Password</label> <input class='form-control' name='confirmPassword'
                required='' type='password'>
              </div><!-- #messages is where the messages are placed inside -->
              <div class='form-group'>
                <div class='col-md-9 col-md-offset-3'>
                  <div id='messages'></div>
                </div>
              </div><button class='btn btn-primary pull-right btn' disabled='disabled' type=
              'submit'>Signup</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src='/js/signup.js'>
  </script>
</body>
</html>
