<!DOCTYPE html>
<html lang='en'>
<head>
  <link href='/css/categorySpending.css' rel='stylesheet'>
  <title>iSpend</title>
</head>
<body>
  <header>
    <%include header.ejs %>
    <link href='/css/categorySpending.css' rel='stylesheet' type='text/css'>
  </header>
  <div class='container category-container'>
    <div class='row'>
      <div class='container'>
        <div class='row'>
          <div class='col-md-6'>
            <label class='spending-title' for='title for spending' id='spedningSummary'></label>
          </div>
          <div class='col-md-6 year-menu'>
            <div class='dropdown'>
              <button class='btn pull-btn-default dropdown-toggle category-btn' data-toggle='dropdown' id='menu1' type='button'>Select Other Month<span class='caret'></span></button>
              <ul aria-labelledby='menu1' class='dropdown-menu' role='menu'>
                <%var month = ['January', 'February', 'March', 'April', 'May','June','July', 'August', 'September', 'October', 'November', 'December'];%><%var monthYear=''; %><%for(var i=0; i < data.result.length; i++) {
                                     %><%monthYear = month[data.result[i].month-1] +' '+data.result[i].year;
                                     %>
                <li role='presentation'>
                  <a data-month='<%=data.result[i].month%>' data-year='<%=data.result[i].year%>' href='#' role='menuitem' tabindex='-1'><%=monthYear%></a>
                </li><%} %>
              </ul>
            </div>
          </div>
        </div><!--row-->
      </div><!--continer-->
      <div class='row'>
        <div class='col-md-6'>
          <div class='panel panel-default'>
            <div class='panel-heading'>
              <label class='panel-title spending-table' for='Spending category'><i class='fa fa-long-arrow-right fa-fw'></i> Spending Categories</label>
            </div>
            <div class='panel-body'>
              <div>
                <div class='text-center' id='pieChart'></div>
              </div>
            </div>
          </div>
        </div><!--col -->
        <div class='col-md-6'>
          <div class='panel panel-default'>
            <div class='panel-heading'>
              <div class='panel-title spending-chart'>
                <i class='fa fa-long-arrow-right fa-fw'></i> <label class='budgeting' for='budget'>Budget</label> vs <label class='spending' for='spending'>Spending</label>
              </div>
            </div>
            <div class='panel-body barchart-panel'>
              <div class='text-center' id='barChart'></div>
            </div>
          </div>
        </div>
      </div>
      <div class='row'>
        <div class='col-md-12'>
          <div class='panel panel-default'>
            <div class='panel-heading'>
              <div class='panel-title'>
                <i class='fa fa-long-arrow-right fa-fw'></i> <label for='Spending Table'>Spending</label>
              </div>
            </div>
            <div class='panel-body'>
              <table cellspacing='0' class='table table-striped' id='categorySpendingTable' width='100%'>
                <thead>
                  <tr>
                    <th scope='col'></th>
                    <th scope='col'>Spending</th>
                    <th scope='col'>Budget</th>
                  </tr>
                </thead>
              </table>
            </div>
          </div>
        </div>
      </div>
      <script src='/js/categorySpending.js'>
      </script>
    </div>
  </div>
</body>
</html>
